{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "go: build",
      "type": "shell",
      "command": "go",
      "args": [
        "build",
        "-v",
        "."
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": "$go"
    },
    {
      "label": "go: run current file",
      "type": "shell",
      "command": "go",
      "args": [
        "run",
        "${file}"
      ],
      "group": "none",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,        // 変更: エディタにフォーカスを維持
        "panel": "shared"      // 変更: 共有パネルを使用
      },
      "problemMatcher": "$go"
    },
    {
      "label": "go: test",
      "type": "shell",
      "command": "go",
      "args": [
        "test",
        "-v",
        "."
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": "$go"
    },
    {
      "label": "go: mod tidy",
      "type": "shell",
      "command": "go",
      "args": [
        "mod",
        "tidy"
      ],
      "group": "none",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "go: fmt all",
      "type": "shell",
      "command": "go",
      "args": [
        "fmt",
        "./..."
      ],
      "group": "none",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      }
    }
  ]
}
